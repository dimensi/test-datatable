.nav
	display block
	background white
	&__container
		@extend $vertical-align-middle
	&__menu
		@extend $row
		color $purple
		list-style none
		margin 0
		+below('m')
			width 100%
			display none
			transition height 0.35s ease
			height 0
			overflow hidden
			&--active
				display block
	&__logo
		+below('m')
			order -1
	&__link
		padding 16px
		display block
		line-height 1.5
		transition 0.3s
		+below('m')
			padding 8px
		&:hover
			background-color $light-grey
			color $dark-purple
		&--active
			font-weight bold