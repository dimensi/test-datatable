.m-button
	display none
	width 40px
	height 30px
	position relative
	background-color transparent
	border 1px solid $black
	border-radius 3px
	padding none
	appearance none
	cursor pointer
	padding 5px 10px
	+below('m')
		display block
		margin-left auto
	&__top
	&__middle
	&__bottom
		width 25px
		height 3px
		position absolute
		left 0
		right 0
		margin 0 auto
		border-radius 15px
		background $black
		transition all 0.3s ease
	&__top
		top 5px
	&__middle
		top 13px
	&__bottom
		top 21px
	~/--active
		& ^[-1]__top
			transform rotate(45deg)
			top 13px
		& ^[-1]__middle
			opacity 0
		& ^[-1]__bottom
			transform rotate(-225deg)
			top 13px